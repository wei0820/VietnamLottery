<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="2"
            android:textSize="12sp"
            android:textColor="#9e9e9e"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:" />
        <TextView
            android:layout_weight="8"
            android:id="@+id/orderno"
            android:textSize="14sp"
            android:textColor="#3a3a3a"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1287398127381273" />

    </LinearLayout>

    <LinearLayout
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:orientation="vertical">
            <TextView
                android:id="@+id/payname"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#3a3a3a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="打款人姓名:"/>

            <TextView
                android:id="@+id/cardno"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#9e9e9e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text=""/>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bankname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:text="收款银行:"
                android:textColor="#3a3a3a"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/username"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#9e9e9e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="收款人姓名:"/>



        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textSize="20sp"
            android:textColor="#3a3a3a"
            android:gravity="center_horizontal"
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500000.000" />


    </LinearLayout>
    <LinearLayout
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="8"
            android:id="@+id/time"
            android:textSize="12sp"
            android:textColor="#9e9e9e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kdjfgsdfdsf" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_toLeftOf="@+id/sure_button"
            android:layout_gravity="center"
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_login_blue_radius"
            android:text="申请消单"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <Button
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:id="@+id/sure_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_login_blue_radius"
            android:text="确定到账"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

    </RelativeLayout>

    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#000000"  />
</LinearLayout>